<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="4" x:Name="Boutton" Content="Connexion" Click="Connexion" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="40"/>
        <TextBox Grid.Row="1" x:Name="login" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400" Height="40" />
        <Label Grid.Row="0" Content="Login" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20"/>

        <PasswordBox Grid.Row="3" x:Name="password" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400" Height="40" />
        <Label Grid.Row="2" Content="Password" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20"/>
    </Grid>
</Window>
